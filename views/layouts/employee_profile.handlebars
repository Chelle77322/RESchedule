<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{first-name}}{{last-name</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Employee Profile</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="employee_form">Availability:</label>
        <input class="form-input" type="text" id= 'employee-name'
        name="employee-name" />
      </div>
      <div class="form-group">
        <label for="weekly-schedule">needed funding ($):</label>
        <input class="form-input" type="text" id="employee-schedule" name="employee-schedule" />
      </div>
      <div class="form-group">
        <label for="task-desc">description:</label>
        <textarea class="form-input" id="task-desc" name="task-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Confirm</button>
      </div>
    </form>
  </div>

  {{#if task.length}}
  <div class="col-md-6 project-list">
    <h3>Weekly Schedule:</h3>

    {{#each task as |task|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/artisan/{{task.id}}">{{task.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{task.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="../public/jss/employee_profile.js"></script>

<div class="row">
  <div class="col-auto">
    <h2>Welcome, 
      {{#with Employee}}
      {{first-name}}{{last-name}}
      {{/with}}</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Employee Profile</h3>

    <form class="form employee-form">
      <div class="form-group">
        <label for="employee_form">Employee Availability:</label>
        <input class="form-input" type="text" id= 'first_name'
        name="last_name" />
        <input type="date" data-display-mode="inline" data-is-range="true" data-close-on-select="false">
       {{! can set the following --startDate , endDate, startTime, endTime --}}
      </div>
      
        
     
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Confirm</button>
      </div>
    </form>
  </div>

  {{#if task.length}}
  <div class="col-md-6 project-list">
    <h3>Weekly Schedule:</h3>

    {{#each task as |task|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/artisan/{{task.id}}">{{task.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{task.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="../public/jss/employee_profile.js"></script>

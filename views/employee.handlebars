<div class="row">
    <div class="col-auto">

        <h2>Welcome, {{first_name}} {{last_name}} </h2>

    </div>
</div>

<div class="col-md-6">
    <h3>Employee Schedule</h3>

    {{#each task as |task|}}
    <div class="row mb-2">
        <div class="col-md-8">

            <h4>{{task.title}}</h4>
        </div>
        <div class="col-md-4">
            <p><b>Start: </b>{{task.start_time}}</p>
            <p><b>Finish: </b>{{task.finish_time}}</p>
            <button class="btn btn-sm btn-danger" task="{{task.id}}">OFFER SHIFT</button>


        </div>
    </div>
    {{/each}}
</div>